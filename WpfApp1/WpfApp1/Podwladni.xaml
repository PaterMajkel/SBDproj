<Page x:Class="PoliceApp.Podwladni"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoliceApp"
      mc:Ignorable="d" 
      Title="Podwładni" Height="524" Width="862">
    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Blue" Offset="0.0" />
                <GradientStop Color="Cyan" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="100" Margin="212,220,0,0" VerticalAlignment="Top" Width="100"/>
        <Rectangle HorizontalAlignment="Center" Height="446" Margin="0,39,0,0" Stroke="Black" VerticalAlignment="Top" Width="784">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Blue" Offset="0.0" />
                    <GradientStop Color="Cyan" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Margin="889,130,-305,130" Stretch="Fill" Source="Images/Police2.png"/>
        <Label Content="Nowa pozycja" FontSize="20" HorizontalAlignment="Left" Margin="607,109,0,0" VerticalAlignment="Top"/>
        <TextBlock Background="White" HorizontalAlignment="Left" Margin="655,220,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="112"/>
        <Button Content="Edytuj" HorizontalAlignment="Left" Margin="529,363,0,0" VerticalAlignment="Top" Width="118" Height="31" Background="CadetBlue"
            FontSize="20" Click="Button_Click"/>
        <Button Content="Usuń" HorizontalAlignment="Left" Margin="688,363,0,0" VerticalAlignment="Top" Width="117" Height="31" Background="CadetBlue"
            FontSize="20" Click="Button_Click"/>

        <ListView Name="ListViewColumns" Margin="64,95,350,95" SelectionChanged="ListViewColumns_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="IdHeader" Header="ID"  Width="20" DisplayMemberBinding="{Binding KartotekaId}" />
                    <GridViewColumn x:Name="ImieHeader" Header="Imię" Width="110" DisplayMemberBinding="{Binding Imie}"/>
                    <GridViewColumn x:Name="NazwiskoHeader" Header="Nazwisko"  Width="110" DisplayMemberBinding="{Binding Nazwisko}"/>
                    <GridViewColumn x:Name="WiekHeader" Header="Wiek"  Width="140" DisplayMemberBinding="{Binding Wiek}"/>

                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="Panel zarządzanie podwładnymi&#xA;" FontFamily="Century Gothic"
  FontSize="36" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top"/>
        <TextBlock Background="White" HorizontalAlignment="Left" Margin="655,167,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="114"/>
        <Label Content="Przełożony" FontSize="20" HorizontalAlignment="Left" Margin="535,155,0,0" VerticalAlignment="Top"/>
        <Label Content="Podwładny" FontSize="20" HorizontalAlignment="Left" Margin="537,211,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.692"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="615,275,0,0" VerticalAlignment="Top" Width="117" Height="32" Background="CadetBlue"
            FontSize="20" Click="Button_Click"/>

    </Grid>
</Page>
